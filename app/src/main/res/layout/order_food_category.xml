<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/m85"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:background="@color/colorBlue">

    <ImageView
        android:id="@+id/food_menu_hdr_img"
        android:layout_width="@dimen/m35"
        android:layout_height="@dimen/m35"
        android:padding="1dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="@dimen/m10"
        android:layout_marginRight="@dimen/m10"
        android:src="@drawable/ic_category"/>

    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/m5"
        android:layout_marginRight="@dimen/m5"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="@dimen/m15"
        android:paddingTop="@dimen/m15"
        android:text="Tea"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold" />

</LinearLayout>