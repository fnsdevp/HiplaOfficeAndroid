        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/m5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_minus_belonging"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/et_belonging_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:text="@string/name"
                        android:layout_weight="6"
                        android:textColor="@color/text_white"
                        android:textColorHint="@color/text_white"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_weight="4"
                        android:id="@+id/et_belonging_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/m5"
                        android:layout_toRightOf="@+id/et_belonging_name"
                        android:gravity="center_vertical"
                        android:text="@string/example_name"
                        android:textColor="@color/text_white"
                        android:textColorHint="@color/text_white"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/linLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignBottom="@+id/iv_minus_belonging"
                    android:layout_toLeftOf="@+id/iv_minus_belonging"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="6"
                        android:background="@color/line_gray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/m5"
                        android:layout_weight="4"
                        android:background="@color/line_gray"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_minus_belonging"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/m5"
                    android:src="@drawable/img_minu_red" />

            </RelativeLayout>
        </LinearLayout>
