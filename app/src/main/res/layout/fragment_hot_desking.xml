<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.hipla.smartoffice_new.dialogs.HotDeskingDialog" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="@dimen/m10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_bottom"
            android:background="@drawable/hotdesking_final">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_29sdp"
                android:layout_marginTop="@dimen/_37sdp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/iv_seat_1"
                    android:layout_width="@dimen/m25"
                    android:layout_height="@dimen/m25"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/text_black"
                    android:text="1A"
                    android:textSize="@dimen/_8ssp"
                    android:background="@drawable/ic_seat_booked" />

                <TextView
                    android:id="@+id/iv_seat_2"
                    android:layout_width="@dimen/m25"
                    android:layout_height="@dimen/m25"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/text_black"
                    android:text="1A"
                    android:textSize="@dimen/_8ssp"
                    android:background="@drawable/ic_seat_booked" />

                <TextView
                    android:id="@+id/iv_seat_3"
                    android:layout_width="@dimen/m25"
                    android:layout_height="@dimen/m25"
                    android:layout_marginTop="@dimen/_37sdp"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/text_black"
                    android:text="1A"
                    android:textSize="@dimen/_8ssp"
                    android:background="@drawable/ic_seat_booked"  />

                <TextView
                    android:id="@+id/iv_seat_4"
                    android:layout_width="@dimen/m25"
                    android:layout_height="@dimen/m25"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:layout_marginTop="@dimen/_37sdp"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/text_black"
                    android:text="1A"
                    android:textSize="@dimen/_8ssp"
                    android:background="@drawable/ic_seat_booked"  />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_37sdp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/iv_seat_5"
                    android:layout_width="@dimen/m25"
                    android:layout_height="@dimen/m25"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/text_black"
                    android:text="1A"
                    android:textSize="@dimen/_8ssp"
                    android:background="@drawable/ic_seat_booked" />

                <TextView
                    android:id="@+id/iv_seat_6"
                    android:layout_width="@dimen/m25"
                    android:layout_height="@dimen/m25"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/text_black"
                    android:text="1A"
                    android:textSize="@dimen/_8ssp"
                    android:background="@drawable/ic_seat_booked"  />

                <TextView
                    android:id="@+id/iv_seat_7"
                    android:layout_width="@dimen/m25"
                    android:layout_height="@dimen/m25"
                    android:layout_marginTop="@dimen/_37sdp"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/text_black"
                    android:text="1A"
                    android:textSize="@dimen/_8ssp"
                    android:background="@drawable/ic_seat_booked"  />

                <TextView
                    android:id="@+id/iv_seat_8"
                    android:layout_width="@dimen/m25"
                    android:layout_height="@dimen/m25"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:layout_marginTop="@dimen/_37sdp"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/text_black"
                    android:text="1A"
                    android:textSize="@dimen/_8ssp"
                    android:background="@drawable/ic_seat_booked" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/m10">

            <LinearLayout
                android:id="@+id/ll_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/m10"
                android:layout_marginBottom="@dimen/m15"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/time_duration"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_larg" />

                <Spinner
                    android:id="@+id/et_time_of_booking"
                    android:layout_width="@dimen/m70"
                    android:layout_height="@dimen/m30"
                    android:layout_marginLeft="@dimen/m5"
                    android:layout_marginRight="@dimen/m10"
                    android:background="@drawable/btn_bg_gray"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxEms="2"
                    android:singleLine="true"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_black"
                    android:textSize="@dimen/text_larg" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_marginBottom="@dimen/m5">

                <LinearLayout
                    android:id="@+id/ll_ise_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_ise_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="serif"
                        android:singleLine="true"
                        android:text="@string/wifi_username_format"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ise_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m5"
                    android:layout_below="@+id/ll_ise_username">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:fontFamily="serif"
                        android:singleLine="true"
                        android:text="@string/wifi_password"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_ise_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/m5"
                        android:ellipsize="end"
                        android:fontFamily="serif"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:text="123456"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_make_password_visible"
                        android:layout_width="@dimen/m30"
                        android:layout_height="@dimen/m30"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/m10"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_password_hide" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_delivery_time"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/btn_close"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/btn_height"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/rounded_corner_blue"
                    android:gravity="center"
                    android:text="@string/close"
                    android:textAllCaps="true"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_larg" />

                <TextView
                    android:id="@+id/btn_confirm"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/btn_height"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/m15"
                    android:background="@drawable/rounded_corner_blue"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textAllCaps="true"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_larg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_username"
                android:layout_centerHorizontal="true"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/btn_release_desk"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/rounded_corner_blue"
                    android:gravity="center"
                    android:paddingLeft="@dimen/m5"
                    android:paddingRight="@dimen/m5"
                    android:text="@string/release_hot_desk"
                    android:textAllCaps="true"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_larg" />

                <TextView
                    android:id="@+id/btn_navigate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/m15"
                    android:background="@drawable/rounded_corner_blue"
                    android:gravity="center"
                    android:paddingLeft="@dimen/m10"
                    android:paddingRight="@dimen/m10"
                    android:text="@string/navigate"
                    android:textAllCaps="true"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_larg" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</layout>